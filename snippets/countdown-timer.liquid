{{ 'component-countdown-timer.css' | asset_url | stylesheet_tag }}
<script src="{{ 'countdown-timer.js' | asset_url }}" defer="defer"></script>
<countdown-timer id="countdown-timer-{{ id }}" class="f-countdown-timer f-hidden no-js-hidden f-countdown-timer--{{ style | default: 'minimal' }}" data-countdown-timer="{{ time }}">
    <div class="f-countdown-timer__inner inline-flex items-center justify-center">
        <div class="f-countdown-timer__block">
            <div class="f-countdown-timer__day" data-timer-day>00</div>
            <span class="text-subtext">{{ 'general.countdown-timer.days' | t }}</span>
        </div>
        <div class="f-countdown-timer__block">
            <div class="f-countdown-timer__hour" data-timer-hour>00</div>
            <span class="text-subtext">{{ 'general.countdown-timer.hours' | t }}</span>
        </div>
        <div class="f-countdown-timer__block">
            <div class="f-countdown-timer__minute" data-timer-minute>00</div>
            <span class="text-subtext">{{ 'general.countdown-timer.minutes' | t }}</span>
        </div>
        <div class="f-countdown-timer__block">
            <div class="f-countdown-timer__sec" data-timer-second>00</div>
            <span class="text-subtext">{{ 'general.countdown-timer.seconds' | t }}</span>
        </div>
    </div>
</countdown-timer>
