{%- liquid
  assign sort_by = results.sort_by | default: results.default_sort_by
  if results.url
    assign results_url = results.url
  else
    assign terms = results.terms | escape
    assign results_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
  endif

  assign group_collapsible = section.settings.group_collapsible
  assign open_first_group = section.settings.open_first_group
  assign show_results_count = section.settings.show_results_count
  assign show_more_text = 'products.facets.show_more' | t
  assign show_less_text = 'products.facets.show_less' | t
  if show_more_text contains 'translation missing'
    assign show_more_text = 'Show more'
  endif
  if show_less_text contains 'translation missing'
    assign show_less_text = 'Show less'
  endif
-%}

<drawer-component id="Drawer-Facets" class="f-drawer f-drawer--left f-drawer-facets no-js-hidden f-facets--{{ sidebar_position }}" role="dialog" data-can-move="false" aria-modal="true" hidden style="--f-drawer-width: 400px;">
  <div class="f-drawer__overlay" data-drawer-overlay></div>
  <div class="f-drawer__content w-full focus-inset{% if animated and sidebar_position != 'drawer' %} f-scroll-trigger animate--{{ animation_effect }}{% endif %}" tabindex="-1">
    {% if results.filters != empty %}
      <div class="f-facets__header items-center justify-between">
        <h3 class="f-facets__heading h4">{{ 'products.facets.filter_by_label' | t }}</h3>
        <div class="collection-product-count" role="status" data-product-count>
          {%- if results.results_count -%}
            {{- 'templates.search.results_with_count' | t: terms: results.terms, count: results.results_count -}}
          {%- elsif results.products_count == results.all_products_count -%}
            {{- 'products.facets.product_count_simple' | t: count: results.products_count -}}
          {%- else -%}
            {{- 'products.facets.product_count' | t: product_count: results.products_count, count: results.all_products_count -}}
          {%- endif -%}
        </div>
        <button id="DrawerClose-Facets" class="f-drawer__close btn btn--plain" aria-label="{{ 'accessibility.close' | t }}">
          {% render "icon-close" %}
        </button>
      </div>
    {% endif %}
    <div class="f-drawer__inner scroll-container">
      <div
          class="f-facets__container f-facets__container--{{ sidebar_position }}"
          data-collapsible="{{ group_collapsible | default: false }}"
          data-open-first="{{ open_first_group | default: false }}"
          data-facets-type="{{ sidebar_position }}"
      >
        <facet-filters-form class="f-facets">
          <form id="FacetFiltersForm" class="f-facets__form" data-facet-form>
            {%- if results.terms -%}
              <input type="hidden" name="q" value="{{ results.terms | escape }}">
              <input name="options[prefix]" type="hidden" value="last">
            {%- endif -%}

            <div class="f-facets__wrapper" data-facets-wrapper>
              {%- if results.filters != empty and sidebar_position != 'drawer' -%}
                <h3 class="f-facets__heading visually-hidden">{{ 'products.facets.filter_by_label' | t }}</h3>
              {%- endif -%}
              <div class="f-facets__blocks">
                {%- for filter in results.filters -%}
                  {% liquid
                    assign isOpen = false
                    assign isHidden = false
                    unless open_first_group and forloop.first and group_collapsible
                      assign isHidden = true
                    endunless

                    if open_first_group and forloop.first
                      assign isOpen = true
                    endif

                    if filter.min_value.value != blank or filter.max_value.value != blank or filter.active_values.size > 0
                      assign isOpen = true
                    endif
                    assign is_color = false
                    if settings.color_swatches_enable and settings.color_swatches_trigger != blank
                      assign filter_label = filter.label | downcase
                      assign color_swatches_trigger = settings.color_swatches_trigger | downcase | split: ','
                      assign has_color = color_swatches_trigger | where: filter_label | first
                      if has_color != blank
                        assign is_color = true
                      endif
                    endif
                  %}
                  {% if is_color %}
                    <script src="{{ 'filter-color-swatch.js' | asset_url }}" defer="defer"></script>
                  {% endif %}
                  <div class="f-facets__block js-filter" data-index="{{ forloop.index }}">
                    <collapsible-tab class="collapsible__item" data-one-open="false"{% if isOpen %} open="true"{% endif %}{% unless group_collapsible %} data-destroy="true"{% endunless %}>
                      <button class="f-facets__block-header focus-inset" data-trigger>
                        <h5 class="{{ heading_size }}">{{- filter.label | escape -}}</h5>
                        {% if group_collapsible %}
                          <span data-collapsible-icon class="no-js-hidden">
                            <svg width="2" height="12" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1.333v9.334" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg><svg width="2" height="12" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1.333v9.334" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
                          </span>
                        {% endif %}
                      </button>
                      <div class="f-facets__block-content" data-content{% if isHidden %} hidden{% endif %}>
                        {% case filter.type %}
                          {% when 'list' %}
                            <ul class="list-none f-facets__list{% if is_color %} f-facets__list--color{% endif %}" role="list">
                              {%- for value in filter.values -%}
                                {% assign disabled = false %}
                                {% capture label %}
                                  {{ value.label | escape }} {% if show_results_count %}<span class="f-facets__results-count">({{ value.count }})</span>{% endif %}
                                {% endcapture %}
                                {% capture id %}Filter-{{ filter.label | escape }}-{{ forloop.index }}{% endcapture %}
                                {% if value.count == 0 and value.active == false %}
                                  {% assign disabled = true %}
                                {% endif %}
                                {% unless is_color %}
                                  <li class="f-facets__item{% if forloop.index > 10 %} show-more-item hidden{% endif %}">
                                    <label for="{{ id }}" class="f-checkbox{% if disabled %} f-checkbox--disabled{% endif %}">
                                      <input
                                        type="checkbox"
                                        name="{{ value.param_name }}"
                                        value="{{ value.value }}"
                                        id="{{ id }}"
                                        {% if value.active %}checked{% endif %}
                                        {% if disabled %}disabled{% endif %}
                                      >
                                      <span class="checkmark"></span>
                                      <span>{{ label }}</span>
                                    </label>
                                  </li>
                                {% else %}
                                  {% liquid
                                    assign img_file_name = value.value | handle | append: '.png'
                                    assign image_url = img_file_name | file_img_url: '60x60' | prepend: 'https:' | split: '?' | first
                                    assign value_fallback = value.value | split: ' ' | last | handle
                                  %}
                                  <li class="f-facets__item{% if forloop.index > 10 %} show-more-item hidden{% endif %}">
                                    <filter-color-swatch data-value="{{- value.value | escape -}}" data-fallback-value="{{- value_fallback | downcase -}}" title="{{- value.value -}}"{% if disabled %} disabled{% endif %}>
                                      <label for="{{- id -}}">
                                        <input type="checkbox" id="{{- id -}}" name="{{- value.param_name -}}" value="{{- value.value -}}"{% if value.active %} checked{% endif %} />
                                        <span class="color-check"{% if images[img_file_name] != blank %} style="background-image: url({{ image_url }});"{% endif %}></span>
                                        <span>{{- label -}}</span>
                                      </label>
                                    </filter-color-swatch>
                                  </li>
                                {% endunless %}
                              {%- endfor -%}
                            </ul>
                            {%- if filter.values.size > 10 -%}
                              <show-more-button>
                                <button class="button-show-more btn btn--underline no-js-hidden" id="Show-More-{{ forloop.index }}-{{ section.id }}" type="button">
                                  <span class="label-show-more label-text"><span aria-hidden="true">+ </span>{{ show_more_text }}</span>
                                  <span class="label-show-less label-text hidden"><span aria-hidden="true">- </span>{{ show_less_text }}</span>
                                </button>
                              </show-more-button>
                            {%- endif %}
                          {% when 'price_range' %}
                            {% liquid
                              assign currencies_using_comma_decimals = 'ANG,ARS,BRL,BYN,BYR,CLF,CLP,COP,CRC,CZK,DKK,EUR,HRK,HUF,IDR,ISK,MZN,NOK,PLN,RON,RUB,SEK,TRY,UYU,VES,VND' | split: ','
                              assign uses_comma_decimals = false
                              if currencies_using_comma_decimals contains cart.currency.iso_code
                                assign uses_comma_decimals = true
                              endif

                              if uses_comma_decimals
                                assign from_value = filter.min_value.value | money_without_currency | replace: '.', '' | replace: ',', '.'
                                assign to_value = filter.max_value.value | money_without_currency | replace: '.', '' | replace: ',', '.'
                                assign max = filter.range_max | money_without_currency | replace: '.', '' | replace: ',', '.'
                              else
                                assign from_value = filter.min_value.value | money_without_currency | replace: ',', ''
                                assign to_value = filter.max_value.value | money_without_currency | replace: ',', ''
                                assign max = filter.range_max | money_without_currency | replace: ',', ''
                              endif
                              assign to_value = to_value | default: max
                              assign range_min = from_value | divided_by: max | times: 100
                              assign range_max = to_value | divided_by: max | times: 100
                              assign price_gap = 5
                            %}
                            <price-range
                                  class="f-facets-price"
                                  data-price-max="{{ max }}"
                                  data-price-gap="{{ price_gap }}"
                                  style="--price-min: {{ range_min | default: 0 }}%; --price-max: {{ range_max | default: 100 }}%"
                            >
                              <div class="f-facets-price__range-group">
                                <input data-type="min-range" type="range" aria-label="{{ 'products.facets.from' | t }}" tabindex="-1" class="f-facets-price__range focus-none f-facets-price__range--min" min="0" max="{{ max }}" value="{{ from_value | default: 0 }}">
                                <input data-type="max-range" type="range" aria-label="{{ 'products.facets.to' | t }}" tabindex="-1" class="f-facets-price__range focus-none f-facets-price__range--max" min="0" max="{{ max }}" value="{{ to_value }}">
                              </div>
                              <div class="f-facets-price__inputs">
                                <div class="f-facets-price__field">
                                  <span class="visually-hidden">{{ 'products.facets.from' | t }}</span>
                                  <span class="f-facets-price__field-currency">{{ cart.currency.symbol }}</span>
                                  <input class="form-control"
                                         name="{{ filter.min_value.param_name }}"
                                         id="Filter-{{ filter.label | escape }}-GTE"
                                          {%- if filter.min_value.value -%}
                                            value="{{ from_value }}"
                                          {%- endif -%}
                                         type="number"
                                         inputmode="numeric"
                                         placeholder="0"
                                         min="0"
                                         max="{{ to_value | minus: price_gap }}"
                                         data-type="min-input"
                                  />
                                </div>
                                <span class="f-facets-price__to">{{ 'products.facets.to' | t }}</span>
                                <div class="f-facets-price__field">
                                  <span class="visually-hidden">{{ 'products.facets.to' | t }}</span>
                                  <span class="f-facets-price__field-currency">{{ cart.currency.symbol }}</span>
                                  <input class="form-control"
                                         name="{{ filter.max_value.param_name }}"
                                         id="Filter-{{ filter.label | escape }}-LTE"
                                          {%- if filter.max_value.value -%}
                                            value="{{ to_value }}"
                                          {%- endif -%}
                                         type="number"
                                         inputmode="numeric"
                                         min="{{ from_value | plus: price_gap }}"
                                         max="{{ max }}"
                                         placeholder="{{ max }}"
                                         data-type="max-input"
                                  />
                                </div>
                              </div>
                            </price-range>
                        {% endcase %}
                      </div>
                    </collapsible-tab>
                  </div>
                {%- endfor -%}
                {% if enable_sorting %}
                <div class="f-facets__block js-filter f-facets__block-sortby md:hidden" data-index="{{ results.filters.size | plus: 1 }}">
                  <div id="Mobile-SortBy-Block" class="flex items-center">
                    <label for="facets-SortBy" class="h5 whitespace-nowrap">{{ 'products.facets.sort_by_label' | t }}:</label>
                    <select
                        id="Mobile-SortBy"
                        name="sort_by"
                        class="form-control "
                        aria-describedby="a11y-refresh-page-message a11y-selection-message"
                    >
                      {%- for option in results.sort_options -%}
                        <option value="{{ option.value }}" {% if option.value == sort_by %}selected="selected"{% endif %}>{{ option.name }}</option>
                      {%- endfor -%}
                    </select>
                  </div>
                </div>
                {% endif %}
              </div>
              <noscript>
                <div class="py-sm">
                  <button class="btn btn--primary w-full">{{ 'products.facets.apply' | t }}</button>
                </div>
              </noscript>
            </div>

            {% if results.current_vendor or results.current_type %}
              <input type="hidden" name="q" value="{{ results.current_vendor }}{{ results.current_type }}">
            {% endif %}
          </form>
        </facet-filters-form>
      </div>
    </div>
    <div class="f-facets__footer flex justify-between items-center">
      <facet-remove class="text-center">
        <a href="{{ results_url }}" class="btn btn--underline" aria-label="{{ 'products.facets.clear_all' | t }}">
          <span>{{ 'products.facets.clear_all' | t }}</span>
        </a>
      </facet-remove>
      <facet-apply>
        <button class="btn btn--primary w-full" aria-label="{{ 'products.facets.apply' | t }}">
          {{- 'products.facets.apply' | t -}}
        </button>
      </facet-apply>
    </div>
  </div>
</drawer-component>
