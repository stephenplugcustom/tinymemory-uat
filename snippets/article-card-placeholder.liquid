<div 
	class="f-article-card f-article-card__placeholder {{ classes }}{% if animated %} f-scroll-trigger animate--{{ animation_effect }}{% endif %}"
	{% if animated %}
		data-cascade
		style="--animation-order: {{ index }};"
	{% endif %}
>
    <div class="f-article-card__image">
        <div class="f-image f-card" style="--aspect-ratio: {{ image_aspect_ratio }};">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
    </div>
    <div class="f-article-card__info">
        {% if show_date %}
            <p class="f-article-card__date">
                {{ 'now' | date: "%b %d, %y" }}
            </p>
        {% endif %}
        <h3 class="f-article-card__title h5">
            {{ 'onboarding.blog_title' | t }}
        </h3>
        {% if show_excerpt %}
            <div class="f-article-card__excerpt text-subtext">
                {{ 'onboarding.blog_excerpt' | t }}
            </div>
        {% endif %}
        {% if show_readmore %}
            <a href="#" class="btn btn--underline f-article-card__readmore text-normal">
                {{ 'blogs.article.read_more' | t }}
            </a>
        {% endif %}
    </div>
</div>
