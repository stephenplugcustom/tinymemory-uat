{{ 'hero.css' | asset_url | stylesheet_tag }}
{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.settings.custom_class
  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign container = section.settings.container
  assign hero_height = section.settings.hero_height
  assign text_color = section.settings.text_color
  assign image = section.settings.image
  assign image_mobile = section.settings.image_mobile
  assign show_text_below = section.settings.show_text_below
  assign text_alignment = section.settings.text_alignment
  assign text_alignment_mobile = section.settings.text_alignment_mobile
  assign image_overlay_opacity = section.settings.image_overlay_opacity

  if hero_height == 'adapt'
    assign aspect_ratio = image.aspect_ratio | default: 2.0
    assign aspect_ratio_mobile = image.aspect_ratio | default: 2.0
  endif
  unless image_mobile == blank
    assign aspect_ratio_mobile = image_mobile.aspect_ratio
  endunless

	assign animation_effect = settings.animations
	assign animated = false
	if animation_effect != 'none'
		assign animated = true
		if section.settings.animations != 'inherit'
			assign animation_effect = section.settings.animations
		endif
	endif
%}

{% assign content_container = 'container-fluid' %}
{% if section.settings.content_in_container == true %}
    {% assign content_container = 'container' %}
{% endif %}

<div
  class="f-hero f-hero--{{ hero_height }}{{ custom_class }}"
  id="{{ section_id }}"
  data-section-id="{{ section.id }}"
  data-section-type="hero-section"
>
  <div class="{{ container }}">
    <div class="f-hero__wrapper relative{% if show_text_below %} f-hero__wrapper--mobile-stack{% endif %}{% if image_mobile %} f-hero__wrapper--mobile-image{% endif %}{% if animated and section.settings.enable_bg_zoom_effect %} overflow-hidden f-scroll-trigger animate--zoom-fade{% endif %}"{%- if hero_height == 'adapt' -%} style="--aspect-ratio: {{ aspect_ratio }};--aspect-ratio-mobile: {{ aspect_ratio_mobile }}"{% endif %}>
        {%- if image != blank -%}
            <div
							class="f-hero__bg f-hero__bg--desktop bg-image{% if image_mobile != blank %} hidden md:block{% endif %}{% if animated and section.settings.enable_bg_zoom_effect %} f-image{% endif %}"
							style="--aspect-ratio: {{ image.aspect_ratio }};"
            >
							{%- liquid 
								assign image_height = image.width | divided_by: image.aspect_ratio	
							-%}
							{{ image | image_url: width: 1500 | image_tag:
								loading: 'lazy',
								width: image.width,
								height: image_height,
								sizes: '100vw',
								widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
								alt: image.alt | escape
							}}
            </div>
        {%- else -%}
            <div class="f-image bg-image f-hero__bg{% if image_mobile != blank %} hidden md:block{% endif %}" style="--aspect-ratio: 21/9">
                {{ 'lifestyle-' | append: 1 | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
        {%- endif -%}
        {% unless image_mobile == blank %}
          <div class="md:hidden f-hero__bg f-hero__bg--mobile bg-image{% if animated and section.settings.enable_bg_zoom_effect %} f-image{% endif %}" style="--aspect-ratio: {{ image_mobile.aspect_ratio }}">
						{%- liquid 
							assign image_height = image_mobile.width | divided_by: image_mobile.aspect_ratio	
						-%}
						{{ image_mobile | image_url: width: 1500 | image_tag:
							loading: 'lazy',
							width: image_mobile.width,
							height: image_height,
							sizes: '100vw',
							widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
							alt: image_mobile.alt | escape
						}}
          </div>
        {% endunless %}
        {% if image_overlay_opacity > 0 %}
          <div class="f-hero__overlay bg-overlay" style="--color-overlay-alpha: {{ image_overlay_opacity }}"></div>
        {% endif %}
        {% if section.blocks.size > 0 %}
        <div class="f-hero__content-wrapper absolute inset-full flex {{ content_container }} flex f-hero__content--{{ section.settings.content_position }}">
            <div class="f-hero__content f-text-blocks text-{{ text_alignment_mobile }} md:text-{{ text_alignment }}" style="--text-color: {{ text_color }};">
                {%- for block in section.blocks -%}
                    {% case block.type %}
                        {%- when 'title' -%}
                            <h2 
															class="f-hero_heading text-current {{ block.settings.heading_size }}{% if animated %} f-scroll-trigger animate--{{ animation_effect }}{% endif %}" 
															{{ block.shopify_attributes }}
															{% if animated %}
																data-cascade
																style="--animation-order: {{ forloop.index }};"
															{% endif %}
														>
                                {{ block.settings.title }}
                            </h2>
                        {%- when 'subtitle' -%}
                            <p 
															class="f-hero_subheading text-current h6{% if animated %} f-scroll-trigger animate--{{ animation_effect }}{% endif %}" 
															{{ block.shopify_attributes }}
															{% if animated %}
																data-cascade
																style="--animation-order: {{ forloop.index }};"
															{% endif %}
														>
                              {{ block.settings.subtitle | escape }}
                            </p>
                        {%- when 'text' -%}
                            <div 
															class="f-hero_text text-current rte{% if animated %} f-scroll-trigger animate--{{ animation_effect }}{% endif %}"
															{% if animated %}
																data-cascade
																style="--animation-order: {{ forloop.index }};"
															{% endif %}
															{{ block.shopify_attributes }}
														>{{ block.settings.text }}</div>
                        {%- when 'button' -%}
                            {%- if block.settings.button_label != blank -%}
															<div
																class="{% if animated %} f-scroll-trigger animate--{{ animation_effect }}{% endif %}"
																{% if animated %}
																	data-cascade
																	style="--animation-order: {{ forloop.index }};"
																{% endif %}
															>
																<a{% if block.settings.button_link != blank %} href="{{ block.settings.button_link }}"{% endif %} class="btn {{ block.settings.button_style }} {{ block.settings.button_size }}"{% if block.settings.button_link == blank %} aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
                                    {{ block.settings.button_label | escape }}
                                </a>
															</div>
                            {%- endif -%}
                    {%- endcase -%}
                {%- endfor -%}
            </div>
        </div>
        {% endif %}
    </div>
  </div>
</div>

