<div class="product-collection">
  <h1 class="product-collection-header">設計師簡介</h1>
  <div class="product-collection-item">
    {% assign firstCollection = product.collections | first %}
    {% for collection in product.collections %}
      {% if firstCollection %}
        <img
          src="{{ collection | img_url: '450x450' }}"
          style="max-width: 200px;max-height: 200px; min-width: 150px;min-height: 150px; margin: 15px; width: auto;height: auto;"
        >
        {% break %}
      {% else %}

      {% endif %}
    {% endfor %}

    <div>
      {% assign firstCollection = product.collections | first %}
      {% for collection in product.collections %}
        {% if firstCollection %}
          <p style="font-size: 1.5em;">{{ firstCollection.description }}</p>
          {% break %}
        {% else %}
          <p>No collections assigned to this product.</p>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .product-collection {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin: 30px;
      max-width: 100vw;
      padding: 30px;
  }

  .product-collection-header {
      text-align: center;
  }

  .product-collection-item {
      display: flex;
      flex-direction: row;
      margin: 15px;
      margin-left:30px;
      margin-right:30px;
  }
  @media (max-width: 800px) {
      .product-collection-item {
      display: flex;
      flex-direction: column;
      margin: 15px;
      align-items: center;
  }
  }
</style>

{% schema %}
{
    "name": "product-collection-desc",
    "settings": [
        {
            "id": "custom_text_title",
            "type": "text",
            "label": "Text box heading",
            "default": "Title"
        },
        {
            "id": "custom_text_body",
            "type": "richtext",
            "label": "Add custom text below",
            "default": "<p>Add your text here</p>"
        }
    ],
    "presets": [
        {
            "name": "product-collection-desc"
        }
    ]
}
{% endschema %}
