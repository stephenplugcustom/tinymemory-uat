{{ 'multicolumn.css' | asset_url | stylesheet_tag }}

{% liquid
    assign section_id = section.settings.custom_id | default: section.id
    assign custom_class = section.settings.custom_class

    unless custom_class == blank
        assign custom_class = custom_class | prepend: ' '
    endunless

    assign container = section.settings.container
    assign columns = section.settings.columns

    assign enable_swipe_mobile = section.settings.enable_swipe_mobile
    assign mdCols = columns | minus: 1
    if columns < 3 or request.design_mode
        assign mdCols = columns
    endif
    assign layout = section.settings.layout

    assign enable_slider = false
    if enable_swipe_mobile and request.design_mode
      assign enable_slider = true
    endif

		assign animation_effect = settings.animations
		assign animated = false
		if animation_effect != 'none'
			assign animated = true
			if section.settings.animations != 'inherit'
				assign animation_effect = section.settings.animations
			endif
		endif
%}

<div id="{{ section_id }}" class="f-multicolumn{{ custom_class }} f-section-padding color-{{ section.settings.color_schema }}" style="--section-padding-top: {{ section.settings.padding_top }}px ; --section-padding-bottom: {{ section.settings.padding_bottom }}px; --column-gap:{{ section.settings.column_gap }}rem;--swiper-column-width: 66vw">
  <div class="{{ container }}">
    {% render 'index-section-header', section_settings: section.settings %}
    <flickity-component
        class="f-grid f-grid-1-cols sm:f-grid-2-cols md:f-grid-{{ mdCols }}-cols xl:f-grid-{{ columns }}-cols f-grid--gap-{{ section.settings.column_gap }}{% if enable_slider %} flickity-enable md:flickity-disable{% else %} flickity-disable{% endif %}{% if enable_swipe_mobile %} f-swiper f-swiper--no-scrollbar{% endif %}"
        data-slider-options='{"groupCells": 2, "cellSelector": ".f-column", "contain": true, "wrapAround": true, "freeScroll": {{ request.design_mode }}}'
        data-slider-columns="2"
        data-enable-slider="{{ enable_slider }}"
    >
      {%- for block in section.blocks -%}
        {% liquid
          assign image = block.settings.image
          assign image_link = block.settings.image_link
          assign wrapper_class = ''
          if image_link != blank
            assign wrapper_class = 'f-image--hover-effect'
          endif
        %}
        <div class="f-column" {{ block.shopify_attributes }}>
          <div 
						class="multicolumn-card multicolumn-card--{{ layout }} multicolumn-card--image-{{ section.settings.image_width }}{% if animated %} f-scroll-trigger animate--{{ animation_effect }}{% endif %}"
						{% if animated %}
							data-cascade
							style="--animation-order: {{ forloop.index }};"
						{% endif %}
					>
            <div class="multicolumn-card__inner flex flex-col text-{{ section.settings.text_alignment }}">
              {% if image != blank %}
                <{% if image_link != blank %}a aria-label="{{ 'accessibility.read_more' | t: title: block.settings.title }}" href="{{ image_link | escape }}"{% else %}div{% endif %} class="multicolumn-card__image">
                    {% render 'responsive-image', image: block.settings.image, alt: image.alt, wrapper_class: wrapper_class %}
                </{% if image_link != blank %}a{% else %}div{% endif %}>
              {% endif %}
              <div class="multicolumn-card__info">
                {%- if block.settings.title != blank -%}
                  <h3 class="{{ block.settings.heading_size }}">{{ block.settings.title | escape }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="rte">{{ block.settings.text }}</div>
                {%- endif -%}
                {%- if block.settings.button_text != blank -%}
                  <a href="{{ block.settings.button_link | default: '#' }}" class="btn {{ block.settings.button_style }} btn--small">{{ block.settings.button_text }}</a>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </flickity-component>
  </div>
</div>

