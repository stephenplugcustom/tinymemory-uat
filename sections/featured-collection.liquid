{% liquid
    assign section_id = section.settings.custom_id | default: section.id
    assign custom_class = section.settings.custom_class

    unless custom_class == blank
        assign custom_class = custom_class | prepend: ' '
    endunless

    assign container = section.settings.container

    assign enable_slider = section.settings.enable_slider
    assign collection = collections[section.settings.collection]
    assign product_to_show = section.settings.limit | default: 8
    assign button_label = section.settings.button_label

    assign image_ratio = section.settings.pcard_image_ratio
    assign show_vendor = section.settings.show_vendor
    assign container = section.settings.container
    assign columns = section.settings.columns

    assign enable_swipe_mobile = section.settings.enable_swipe_mobile

    assign show_nav = section.settings.show_nav
    assign show_dots = section.settings.show_dots
    assign button_style = section.settings.button_style
    assign button_label = section.settings.button_label

		assign show_all_button_on_top = section.settings.show_all_button_on_top

    if columns >= product_to_show
        assign enable_slider = false
    endif

		assign animation_effect = settings.animations
		assign animated = false
		if animation_effect != 'none'
			assign animated = true
			if section.settings.animations != 'inherit'
				assign animation_effect = section.settings.animations
			endif
		endif
%}

{% assign mdCols = columns | minus: 1 %}
{% if columns < 3 or request.design_mode %}
    {% assign mdCols = columns %}
{% endif %}

{{ 'component-product-card.css' | asset_url | stylesheet_tag }}
<link id="ModalComponent" rel="stylesheet" href="{{ 'modal-component.css' | asset_url }}" media="print" onload="this.media='all'">

<section
    id="{{ section_id }}"
    data-section-type="featured-collection"
    data-section-id="{{ section.id }}"
    class="featured-collection{{ custom_class }} f-section-padding color-{{ section.settings.color_schema }}"
    style="--section-padding-top: {{ section.settings.padding_top }}px ; --section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
    <div class="{{ container }}">
        {% render 'index-section-header', 
					section_settings: section.settings 
					show_all_button_on_top: show_all_button_on_top,
					show_all_button_link: collection.url,
					show_all_button_style: button_style,
					show_all_button_label: button_label
				%}
        <flickity-component
            class="f-grid f-grid--gap-{{ section.settings.column_gap }} f-grid-2-cols md:f-grid-{{ mdCols }}-cols xl:f-grid-{{ columns }}-cols flickity-disable{% if enable_slider %} md:flickity-enable{% endif %}{% if enable_swipe_mobile %} f-swiper f-swiper--no-scrollbar{% endif %}"
            data-slider-options='{"pageDots": {{ show_dots }}, "prevNextButtons": {{ show_nav }}, "groupCells": 2, "cellSelector": ".f-column", "wrapAround": true, "freeScroll": {{ request.design_mode }}}'
            data-slider-columns="{{ columns }}"
            data-enable-slider="{{ enable_slider }}"
            data-calc-button-position="true"
            data-products-container
        >
            {% if collection != blank %}
                {% for product in collection.products limit: product_to_show %}
                    <div class="f-column">
                        {% render 'product-card', product: product, image_ratio: image_ratio, show_vendor: show_vendor, index: forloop.index, animated: animated, animation_effect: animation_effect %}
                    </div>
                {% endfor %}
            {% else %}
                {% for i in (1..product_to_show) %}
                    <div class="f-column">
                        {% render 'product-card-placeholder', index: forloop.index, animated: animated, animation_effect: animation_effect %}
                    </div>
                {% endfor %}
            {% endif %}
        </flickity-component>
        {% if button_label != blank and show_all_button_on_top == false %}
            <div class="section__footer flex justify-center">
                <a class="btn {{ button_style }}" href="{{ collection.url }}">
                    {{- button_label -}}
                </a>
            </div>
        {% endif %}
    </div>
</section>

