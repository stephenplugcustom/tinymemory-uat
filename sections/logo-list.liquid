
{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.settings.custom_class

  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign container = section.settings.container
  assign columns = section.settings.columns
  assign enable_slider = section.settings.enable_slider

  assign enable_swipe_mobile = section.settings.enable_swipe_mobile

  assign mdCols = columns | minus: 1
  if columns < 3 or request.design_mode
    assign mdCols = columns
  endif

	assign animation_effect = settings.animations
	assign animated = false
	if animation_effect != 'none'
		assign animated = true
		if section.settings.animations != 'inherit'
			assign animation_effect = section.settings.animations
		endif
	endif
%}

{% style %}
  .logo-list .flickity-enabled .flickity-button {
    transform: translateY(-50%);
    margin-top: 0;
    top: 50% !important;
  }
  .logo-list .flickity-enabled.flickity-with-dots .flickity-button {
    top: calc(50% - 3.25rem) !important;
  }
  @media (max-width: 639px) {
    .logo-list .flickity-enabled .f-column {
      width: 50% !important;
    }
  }
{% endstyle %}
<div id="{{ section_id }}" data-section-type="logo-list" data-section-id="{{ section.id }}" data-columns="{{ columns }}" data-enable-slider="{{ enable_slider }}" class="logo-list {{ custom_class }} f-section-padding color-{{ section.settings.color_schema }}" style="--section-padding-top: {{ section.settings.padding_top }}px ; --section-padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="{{ container }}">
    {% render 'index-section-header', section_settings: section.settings %}
    <flickity-component
      class="f-grid items-center f-grid-2-cols md:f-grid-{{ mdCols }}-cols xl:f-grid-{{ columns }}-cols flickity-disable f-grid--gap-{{ section.settings.column_gap }}{% if enable_slider %} md:flickity-enable{% endif %}{% if enable_swipe_mobile %}  f-swiper f-swiper--no-scrollbar{% endif %}"
      data-slider-options='{"pageDots": {{ section.settings.show_dots }}, "prevNextButtons": {{ section.settings.show_nav }}, "groupCells": 2, "wrapAround": true, "freeScroll": {{ request.design_mode }}}'
      data-slider-columns="{{ columns }}"
      data-enable-slider="{{ enable_slider }}"
      data-calc-button-position="true"
    >
      {%- for block in section.blocks -%}
        {%- liquid
          assign image = block.settings.image
          assign image_from_url = block.settings.image_from_url
          assign image_link = block.settings.image_link
          assign image_width = block.settings.image_width | append: '%'
          assign alt = 'Logo image ' | append: forloop.index

          assign wrapper_class = ''
          if image_link != blank
            assign wrapper_class = 'f-image--hover-effect'
          endif
        -%}
        <div class="f-column" {{ block.shopify_attributes }}>
					<div 
						class="block w-full {% if animated %} f-scroll-trigger animate--{{ animation_effect }}{% endif %}"
						{% if animated %}
							data-cascade
							style="--animation-order: {{ forloop.index }};"
						{% endif %}
					>
						<{% if image_link != blank %}a href="{{ image_link | escape }}" aria-label="{{ block.settings.image.alt | default: 'image-logo-list-' | append: forloop.index }}"{% else %}div{% endif %} class="logo-list__image block text-center flex items-center justify-center h-full">
              {% if image_from_url != blank %}
                  <div class="f-image{{ wrapper_class }}" style="--image-width: {{ image_width }}">
                      <img class="mx-auto f-image" src="{{ image_from_url }}" width="auto" height="auto" loading="lazy" alt="{{ alt }}">
                  </div>
              {% elsif image != blank %}
                  {% assign wrapper_class = wrapper_class | append: ' inline-block' %}
                  {% render 'responsive-image', image: block.settings.image, image_width: image_width, wrapper_class: wrapper_class, alt: image.alt %}
              {% else %}
                  <svg class="placeholder-svg f-image" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 158.3 158.3"><path fill="#ccc" d="M50.7 83.8H43v-17c0-.3-.3-.6-.6-.6h-2.8c-.3 0-.6.3-.6.6v20.1c0 .3.2.6.6.6h11.1c.3 0 .6-.3.6-.6v-2.5c-.1-.4-.3-.6-.6-.6zm12.7-17.9c-6.1 0-10.9 4.9-10.9 10.9 0 6.1 4.8 10.9 10.9 10.9 6.1 0 10.9-4.8 10.9-10.9 0-6-4.8-10.9-10.9-10.9zm0 17.9c-3.8 0-6.9-3.1-6.9-6.9 0-3.8 3.1-7 6.9-7s7 3.2 7 7c0 3.7-3.2 6.9-7 6.9zm31.7-6.9h-5.8c-.3 0-.6.2-.6.6v2.4c0 .3.2.5.6.5h2.4V83c-.6.2-1.9.8-3.6.8-3.8 0-6.8-3.2-6.8-6.9 0-3.8 3-7 6.8-7 1.7 0 3.3.6 4.6 1.8.3.2.5.2.8 0l1.9-2c.2-.2.2-.6 0-.8-2.1-1.8-4.7-2.8-7.4-2.8-6 0-10.9 4.9-10.9 10.9 0 6.1 4.8 10.8 10.9 10.8 4.4 0 7.5-2 7.5-2 .1-.1.2-.2.2-.5v-7.8c-.1-.3-.3-.6-.6-.6zm14.5-11c-6.1 0-10.9 4.9-10.9 10.9 0 6.1 4.8 10.9 10.9 10.9 6.1 0 10.9-4.8 10.9-10.9 0-6-4.8-10.9-10.9-10.9zm0 17.9c-3.8 0-6.9-3.1-6.9-6.9 0-3.8 3.1-7 6.9-7s7 3.2 7 7c0 3.7-3.2 6.9-7 6.9z"></path></svg>
              {% endif %}
          	</{% if image_link != blank %}a{% else %}div{% endif %}>
					</div>
        </div>
      {%- endfor -%}
    </flickity-component>
  </div>
</div>

